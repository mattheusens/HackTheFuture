<MudPaper Class="pa-4 my-3 rounded" Width="100%" Style="bottom: 0;" Elevation="3">
    <div class="d-flex py-2 z-90" style="background-color: white;">
        <MudText Typo="Typo.h4">@Title</MudText>
    </div>
    @if (LoadingFishes)
    {
        <MudProgressLinear Color="Color.Primary" Indeterminate="true"/>
    }
    else
    {
        <MudGrid Class="mt-1 mb-2" Spacing="1">
            @foreach (var fish in Fishes)
            {
                <MudItem xs="4">
                    <BasicFishCard Fish="fish"/>
                </MudItem>
            }
        </MudGrid>
    }
</MudPaper>
